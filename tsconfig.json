{
    "compilerOptions": {
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "allowJs": true,
        "target": "ES6",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "types": ["node"]
    },
    "include": [
        "./src/**/*.ts"
    ]
}